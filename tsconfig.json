{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist",
        "lib": ["esnext"],
        "target": "es2017",
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "removeComments": true,
        "pretty": true
    },
    "include": ["src/**/*"]
}